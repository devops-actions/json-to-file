{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write src/**.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**.ts",
    "test": "jest",
    "all_org": "npm run build && npm run format && npm run lint && npm run package && npm test",
    "all": "npm run lint && npm run format && npm run esbuild",
    "esbuild": "esbuild src/main.ts --bundle --outdir=dist --platform=node"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^2.0.1",
    "esbuild": "^0.27.2"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.2",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^29.12.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "js-yaml": "^4.1.1",
    "prettier": "3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.5.4"
  }
}
